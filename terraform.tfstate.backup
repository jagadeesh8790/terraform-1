terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.16"
    }
  }

  required_version = ">= 1.2.0"
}

provider "aws" {
  region = "ap-south-1"
}

# Specify the EC2 details
resource "aws_instance" "myimg" {
  ami           = "ami-0b99c7725b9484f9e"
  instance_type = "t2.micro"
  
  tags = {
    Name = "myimgsample-1"
 }
}

